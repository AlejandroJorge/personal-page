---
import type { AllowedLanguage } from "@/config/language";
import { getCSSVars } from "@/config/theme";
import NavBar from "@components/NavBar.astro";
import ToggleLanguage from "@components/ToggleLanguage.astro";
import ContactIcons from "@components/ContactIcons.astro";
import { getRelativeLocaleUrl } from "astro:i18n";

interface Props {
  lang: AllowedLanguage;
}
const { lang } = Astro.props;
---

<header>
  <a href={getRelativeLocaleUrl(lang, "/")}>
    <h2>Alejandro.<span>Dev</span></h2>
  </a>

  <NavBar lang={lang} />

  <ToggleLanguage lang={lang} />

  <ContactIcons />
</header>

<style define:vars={getCSSVars()}>
  a {
    text-decoration: none;
    color: var(--textColor);
  }

  span {
    color: var(--primaryColor);
  }

  header {
    display: grid;
    grid-template-columns: 2fr 5fr 1fr 1fr;
    justify-content: space-between;
    align-items: center;
    padding-left: 2rem;
    padding-right: 2rem;
    margin-left: 0.75rem;
    margin-right: 0.75rem;
    min-height: 5rem;
    border-bottom: 0.25rem solid var(--primaryColor);
  }
</style>
