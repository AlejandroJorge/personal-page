---
import { portfolioGithubRepoLink } from "@/config/info";
import type { AllowedLanguage } from "@/config/language";
import { getCSSVars } from "@/config/theme";
import ContactIcons from "@components/ContactIcons.astro";
import { translate, type TextContent } from "@lib/internationalization";

const footerTitle: TextContent = {
  en: "Alejandro.Dev's Portfolio",
  es: "Portfolio de Alejandro.Dev",
};

const repositoryReference: TextContent = {
  en: "You can find the source code of this website ",
  es: "Puedes encontrar el código fuente de esta web ",
};

const repositoryLink: TextContent = {
  en: "here",
  es: "aquí",
};

interface Props {
  lang: AllowedLanguage;
}

const { lang } = Astro.props;
---

<footer>
  <h3>{translate(footerTitle, lang)}</h3>
  <p>
    {translate(repositoryReference, lang)}<a
      href={portfolioGithubRepoLink}
      target="_blank">{translate(repositoryLink, lang)}</a
    >
  </p>
  <ContactIcons />
</footer>

<style define:vars={getCSSVars()}>
  footer {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding-top: 2rem;
    padding-bottom: 2rem;
    gap: 0.8rem;
    background-color: var(--strongerBackgroundColor);
    color: var(--textColor);
    margin-top: auto;
  }

  a {
    color: var(--foregroundColor);
  }
</style>
